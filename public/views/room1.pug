    script(src="https://kit.fontawesome.com/a4d54da7ac.js" crossorigin="anonymous")

body
    div.container
        div.header
            div.row
                div.col-2
                div.col-8
                    h1 Midgard
                div.col-2
                    div(class="estrella" onclick="chStar()")
                    i#favorite(class="far fa-star fa-2x")

        div.row
            div#colJugador01(class="col colJugador")
                div#Jugador-01(class="avatar")
                br
                div
                    h3 Nombre Jugador 01:
                div
                    h2#jugador_local(style="color: #20df7f;")
                    br
                div
                    h3 Porcentaje conquistado:
                div
                    h2#punt_jugador_local(style="color: #20df7f;")
                    br
                div
                    h3 Color asignado:
                div
                    h2#col_jugador_local Color
                    br
                div.mt-4
                    button(type="button" class="btn-salir" data-bs-toggle="modal" data-bs-target="#salirModal" style="visibility: visible") Abandonar la sala

            //TABLERO con Canvas
            div.col
                div#fondoTablero        
                    canvas#tablero_canvas


            //CIERRE TABLERO con Canvas
            div#colJugador02(class="col colJugador")
                div#Jugador-02(class="avatar")
                br
                div
                    h3 Nombre Jugador 02:
                div#nombre-jugador-1
                    h2(style="color: #20df7f;") Bruno
                br
                div
                    h3 Cuadrados conquistados:
                div
                    h2(style="color: #20df7f;") 3
                br
                div
                    h3 Color asignado:
                div
                    h2(style="color: #a110fc;") Violeta
                br
                div.mt-4
                    button(type="button" class="btn-salir" data-bs-toggle="modal" data-bs-target="#salirModal" style="visibility: hidden") Abandonar la sala


            //Modal mensaje confirmación abandono de la sala
            div#salirModal(class="modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true")
                div(class="modal-dialog modal-dialog-centered modal-xl")
                    div.modal-content
                        div.modal-header
                            button(type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close")
                            div.modal-body
                                h1.modal-h1 ¿Quieres abandonar la sala?
                                p.modal-p Si abandonas ahora la sala tu progreso se guardara durante 60min.
                                div.mt-4                               
                                    button(type="button" class="btn-salir") salir
            div
                p#jugadorActual(class="display:none" style="visibility: hidden") Pepe 

footer(class="text-center text-white fixed-bottom" style="background-color: #000000;")
